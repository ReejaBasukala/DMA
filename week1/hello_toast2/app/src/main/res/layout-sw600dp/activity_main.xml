<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/incNumber"
        android:layout_width="468dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:background="#3949AB"
        android:onClick="Toast"
        android:text="Count"
        android:textColor="#F0FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/toastClick"
        app:layout_constraintStart_toEndOf="@+id/toastClick" />

    <Button
        android:id="@+id/toastClick"
        android:layout_width="468dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#3949AB"
        android:onClick="toastClick"
        android:text="TOAST"
        android:textColor="#F2FFFFFF"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FDD835"
        android:gravity="center"
        android:text="0"
        android:textColor="#3949AB"
        android:textSize="200sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toastClick" />

</androidx.constraintlayout.widget.ConstraintLayout>